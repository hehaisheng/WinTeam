<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_fragment_user_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/item_latest_title"
        style="@style/TextView_Main_black"
        android:layout_marginLeft="@dimen/normal_margin"
        android:paddingTop="5dp"
        android:text="赢天下视频直播间来袭！" />

    <TextView
        android:id="@+id/item_latest_time"
        style="@style/TextView_Main_gray"
        android:layout_marginLeft="@dimen/normal_margin"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="12sp"
        tools:text="活动时间：2016-07-14到2016-08-09" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_normal" />

</LinearLayout>
