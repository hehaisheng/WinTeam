<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_hot_trade_item"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/selector_fragment_user_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_hot_title"
        style="@style/TextView_Main_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="美元油"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_hot_price"
        style="@style/TextView_lightred_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        tools:text="30.00" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_price"
            style="@style/TextView_lightred_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+0.45"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/chang_rate"
            style="@style/TextView_lightred_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            tools:text="-0.54%"
            android:textSize="11sp" />


    </LinearLayout>

</LinearLayout>
