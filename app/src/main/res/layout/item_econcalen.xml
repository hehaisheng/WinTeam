<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_econcalen_wrapper"
    android:background="@drawable/selector_fragment_user_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_news_item_height"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/normal_margin">

        <TextView
            android:id="@+id/item_econcalen_tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="16:19"
            android:textColor="@color/user_textColor_gray"
            android:textSize="@dimen/main_gray_TextSize"/>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_econcalen_iv_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star_no"/>

            <ImageView
                android:id="@+id/item_econcalen_iv_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/star_no"/>

            <ImageView
                android:id="@+id/item_econcalen_iv_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/star_no"/>

            <!--<ImageView
                android:id="@+id/item_econcalen_iv_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/star_no"/>

            <ImageView
                android:id="@+id/item_econcalen_iv_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/star_no"/>-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/normal_margin">

        <TextView
            android:id="@+id/item_econcalen_tv_country"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="比利时"
            android:textColor="@color/user_textColor"
            android:textSize="@dimen/home_econcalen_black_textSize"/>

        <TextView
            android:id="@+id/item_econcalen_tv_topic"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="欧盟财长召开会议"
            android:textColor="@color/user_textColor"
            android:textSize="@dimen/home_econcalen_black_textSize"/>
    </LinearLayout>

</LinearLayout>
