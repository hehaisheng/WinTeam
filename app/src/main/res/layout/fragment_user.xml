<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_top_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg">

            <ImageView
                android:id="@+id/fragment_user_per_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/pre_b" />

            <Button
                android:id="@+id/fragment_user_btn_login"
                style="@style/Button.main"
                android:layout_below="@id/fragment_user_per_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_login_btn"
                android:padding="6dp"
                android:text="登录"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/white"
                android:visibility="visible" />


            <TextView
                android:id="@+id/fragment_user_tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_user_per_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:text="123*****456"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_user_ticket_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/env"
                android:drawablePadding="15dp"
                android:text="@string/user_ticket"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_1_height" />

        <RelativeLayout
            android:id="@+id/fragment_user_invite_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">

            <ImageView
                android:id="@+id/fragment_user_iv_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/sha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/fragment_user_iv_invite"
                android:text="@string/user_promotion"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_1_height" />

        <RelativeLayout
            android:id="@+id/fragment_user_infocenter_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/mes"
                android:drawablePadding="15dp"
                android:text="@string/user_infocenter"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_15_height" />

        <RelativeLayout
            android:id="@+id/fragment_user_newact_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/act"
                android:drawablePadding="15dp"
                android:text="@string/user_newact"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_1_height" />

        <RelativeLayout
            android:id="@+id/fragment_user_trancir_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/com"
                android:drawablePadding="15dp"
                android:text="@string/user_trancir"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_15_height" />

        <RelativeLayout
            android:id="@+id/user_order_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ord"
                android:drawablePadding="15dp"
                android:text="我的订单"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_1_height" />

        <RelativeLayout
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/pla"
                android:drawablePadding="15dp"
                android:text="地址管理"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_1_height" />

        <RelativeLayout
            android:id="@+id/fragment_user_guide_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/hel"
                android:drawablePadding="15dp"
                android:text="@string/user_guide"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_1_height" />

        <RelativeLayout
            android:id="@+id/fragment_user_setting_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_fragment_user_bg"
            android:clickable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/set"
                android:drawablePadding="15dp"
                android:text="@string/user_setting"
                android:textColor="@color/user_textColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arr_s" />

        </RelativeLayout>

        <include layout="@layout/space_15_height" />
    </LinearLayout>


</LinearLayout>
