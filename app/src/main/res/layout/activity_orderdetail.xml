<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_top_gray"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/order_no"/>

        <TextView
            android:id="@+id/activity_orderdetail_orderno"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="12345678"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/buildposition_time"/>

        <TextView
            android:id="@+id/activity_orderdetail_buildposition_time"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="2016-07-07"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/evening_up_time"/>

        <TextView
            android:id="@+id/activity_orderdetail_evening_up_time"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="2016-07-08"/>

    </RelativeLayout>

    <include layout="@layout/space_1_height"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/tran_goods"/>

        <TextView
            android:id="@+id/activity_orderdetail_tran_goods"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="粤银150g"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/direction"/>

        <TextView
            android:id="@+id/activity_orderdetail_direction"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="买涨"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/opentran_price"/>

        <TextView
            android:id="@+id/activity_orderdetail_buildposition_price"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="4323.00元"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/evening_up_price"/>

        <TextView
            android:id="@+id/activity_orderdetail_evening_up_price"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="4342.00元"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/stored_number"/>

        <TextView
            android:id="@+id/activity_orderdetail_stored_number"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="2手"/>

    </RelativeLayout>

    <include layout="@layout/space_1_height"/>

    <!--<RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/pay_type"/>

        <TextView
            android:id="@+id/activity_orderdetail_pay_type"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            android:text="现金"/>

    </RelativeLayout>-->

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/pay_money"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_orderdetail_pay_money"
                style="@style/TextView_Main_black"
                android:textColor="@color/lightred"
                tools:text="20.18"/>

            <TextView
                style="@style/TextView_Main_black"
                android:text="元"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/commission"/>

        <TextView
            android:id="@+id/activity_orderdetail_commission"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="1.80元"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/profit_loss_amount"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_orderdetail_profit_loss_amount"
                style="@style/TextView_Main_black"
                android:textColor="@color/lightred"
                tools:text="12.00"/>

            <TextView
                style="@style/TextView_Main_black"
                android:text="元"/>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/space_1_height"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/evening_up_type"/>

        <TextView
            android:id="@+id/activity_orderdetail_evening_up_type"
            android:layout_marginLeft="@dimen/openingtran_2_marginleft"
            style="@style/TextView_Main_black"
            tools:text="手动平仓"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/TextView_Main_black"
            android:text="@string/evening_up_income"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/lightred"
                android:id="@+id/activity_orderdetail_evening_up_income"
                android:layout_marginLeft="@dimen/openingtran_2_marginleft"
                style="@style/TextView_Main_black"
                tools:text="12.00"/>

            <TextView
                style="@style/TextView_Main_black"
                android:text="元"/>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>
