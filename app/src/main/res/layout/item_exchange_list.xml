<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">

    <ImageView
        android:id="@+id/iv_pro"
        android:layout_width="66dp"
        android:layout_height="66dp"
        tools:src="@drawable/pixel" />

    <ImageView
        android:id="@+id/iv_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/arr_s" />

    <TextView
        android:id="@+id/point"
        style="@style/normalTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_toLeftOf="@id/iv_arr"
        android:textColor="@color/textColor_yellow"
        tools:text="-5000积分" />

    <TextView
        android:id="@+id/productName"
        style="@style/normalTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_pro"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toLeftOf="@+id/point"
        android:layout_toRightOf="@id/iv_pro"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="iPhone1235677" />

    <TextView
        android:id="@+id/time"
        style="@style/grayTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pro"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toLeftOf="@+id/point"
        android:layout_toRightOf="@id/iv_pro"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="2016-11-29 10：24" />


</RelativeLayout>
