<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shawnway.nav.app.wtw.module.user.user_center.UserCenterActivity">

    <include layout="@layout/include_top_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="@string/activity_user_image" />

        <ImageView
            android:id="@+id/fragment_user_per_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="10dp"
            android:src="@drawable/pre_b" />

    </RelativeLayout>

    <include layout="@layout/space_1_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="用户名   " />

        <TextView
            android:id="@+id/activity_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            tools:text="MJSA231" />

    </RelativeLayout>

    <include layout="@layout/space_1_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="@string/activity_user_telphone" />

        <TextView
            android:id="@+id/activity_user_telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            tools:text="18377613902" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/line_divider">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="@string/activity_user_secutiy"
            android:textSize="10sp" />
    </RelativeLayout>

    <include layout="@layout/space_1_height" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="@string/activity_user_password" />

        <TextView
            android:id="@+id/updatePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@drawable/bg_update_pwd"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/activity_user_update"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <include layout="@layout/space_1_height" />

    <RelativeLayout
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/activity_card_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_fragment_user_bg">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="解绑粤国际微盘银行卡" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arr_s" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_normal" />

    <RelativeLayout
        android:id="@+id/unbind_jl_wp_bankcard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_fragment_user_bg">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="解绑吉交所微盘银行卡" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arr_s" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_normal" />

    <RelativeLayout
        android:id="@+id/rl_reset_jl_wp_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_fragment_user_bg">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="重置吉交所微盘密码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arr_s" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_normal" />

    <RelativeLayout
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/rl_reset_wp_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_fragment_user_bg">

        <TextView
            style="@style/TextView_Main_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="重置粤国际微盘密码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arr_s" />
    </RelativeLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_36"
        android:background="@drawable/bg_logout"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_14"
        android:paddingTop="@dimen/dp_14"
        android:text="退出当前账号"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>
