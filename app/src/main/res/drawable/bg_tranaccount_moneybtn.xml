            <corners android:radius="2dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/appcolor"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/user_textColor_gray"/>
        </shape>
    </item>
</selector>